<div class="container">
  <h1 class="my-3">My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <li class="my-2">
        <% if task.completed? %>
          <i class="fa-regular fa-square-check mx-2"></i>
        <% else %>
          <i class="fa-regular fa-square mx-2"></i>
        <% end %>
        <%= link_to task.title, task_path(task) %>
        <%= link_to task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do %>
          <i class="fa-solid fa-trash-can mx-2"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
  <div class="px-5">
    <%= link_to new_task_path do %>
      <i class="fa-solid fa-plus"></i> Add a new task
    <% end %>
  </div>
</div>
